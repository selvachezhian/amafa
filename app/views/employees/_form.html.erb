<%= form_for(employee, :html => { :class => 'form-horizontal'}) do |f| %>
    <% if employee.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

          <ul>
            <% employee.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="container">
      <div class="form-group">
        <%= f.label :first_name, class: 'control-label col-sm-2' %>
        <div class="col-sm-10">
          <%= f.text_field :first_name, class: 'form-control', placeholder: 'Enter first name' %>
        </div>
      </div>


      <div class="form-group">
        <%= f.label :last_name, class: 'control-label col-sm-2' %>
        <div class="col-sm-10">
          <%= f.text_field :last_name, class: 'form-control', placeholder: 'Enter last name' %>
        </div>
      </div>


      <div class="form-group">
        <%= f.label :email, class: 'control-label col-sm-2' %>
        <div class="col-sm-10">
          <%= f.text_field :email, class: 'form-control', placeholder: 'Enter email address' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :user_name, class: 'control-label col-sm-2' %>
        <div class="col-sm-10">
          <%= f.text_field :user_name, class: 'form-control', placeholder: 'Enter Username' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :joining_date, class: 'control-label col-sm-2' %>
        <div class="col-sm-10">
          <%= f.date_select :joining_date, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :relieving_date, class: 'control-label col-sm-2' %>
        <div class="col-sm-10">
          <%= f.date_select :relieving_date, class: 'form-control', include_blank: true %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :emp_id, 'Employee id', class: 'control-label col-sm-2' %>
        <div class="col-sm-10">
          <%= f.text_field :emp_id, class: 'form-control', placeholder: 'Enter employee id' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :citrix_id, 'Citrix id', class: 'control-label col-sm-2' %>
        <div class="col-sm-10">
          <%= f.text_field :citrix_id, class: 'form-control', placeholder: 'Enter citrix id' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :project, class: 'control-label col-sm-2' %>
        <div class="col-sm-10">
          <%= f.text_field :project, class: 'form-control', placeholder: 'Enter project name' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :manager, class: 'control-label col-sm-2' %>
        <div class="col-sm-10">
          <%= f.text_field :manager, class: 'form-control', placeholder: 'Enter manager name' %>
        </div>
      </div>

      <div class="form-group dropdown">
        <%= f.label :citrix_access, class: 'control-label col-sm-2' %>
        <div class="col-sm-10">
          <%= f.check_box(:citrix_access)%>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :admin_access, class: 'control-label col-sm-2' %>
        <div class="col-sm-10">
          <%= f.check_box(:admin_access)%>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :department, class: 'control-label col-sm-2' %>
        <div class="col-sm-10">
          <%= f.select :department, Employee.departments.map { |k, _v| [k.titleize, k] }, class: 'form-control'%>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :document_signed, class: 'control-label col-sm-2' %>
        <div class="col-sm-10">
          <%= f.check_box(:document_signed)%>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :beachhead_computrace, 'Employee id', class: 'control-label col-sm-2' %>
        <div class="col-sm-10">
          <%= f.check_box(:beachhead_computrace)%>
        </div>
      </div>

      <div class="actions">
        <div class="col-sm-offset-2 col-sm-4">
          <%= f.submit class: 'btn btn-info' %>
          <%= link_to 'Back', employees_path, class: 'btn btn-info' %>
        </div>
      </div>
    </div>

    <%= text_field_tag('users[country_id]', nil, { :class => 'auto_complete', 'data-url' => 'http://shell.loopj.com/tokeninput/tvshows.php', 'data-duplicate' => 'false', 'data-selection-limit' => '10', 'data-hint-text' => 'Type to search  Country', 'data-no-result' => 'No Country found', 'data-searching-text' => 'Fetching Countries', 'data-selected' => [{id: 123, name: 'Slurms MacKenzie' }, {id: 555, name: 'Bob Hoskins' }].to_json }) %>


<% end %>

<table id="users-table" data-source="<%= user_nsm_asset_nsm_assets_path(format: :json, employee: @employee.id.to_s) %>" class="table table-bordered">
  <thead>
  <tr>
    <th>Id</th>
    <th>Code</th>
    <th>Operating System</th>
  </tr>
  </thead>
  <tbody>
  </tbody>
</table>
