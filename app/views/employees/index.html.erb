<h3>List of Employees</h3>

<div class="container">
  <table class="table table-striped table-hover table-condensed table-bordered">
    <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>User name</th>
      <th>Joining date</th>
      <th>Relieving date</th>
      <th>Employee id</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @employees.each do |employee| %>
        <tr>
          <td><%= employee.first_name %></td>
          <td><%= employee.last_name %></td>
          <td><%= employee.email %></td>
          <td><%= employee.user_name %></td>
          <td><%= employee.joining_date %></td>
          <td><%= employee.relieving_date %></td>
          <td><%= employee.emp_id %></td>
          <td><%= link_to 'Show', employee, class: 'btn btn-default'  %></td>
          <td><%= link_to 'Edit', edit_employee_path(employee), class: 'btn btn-default'  %></td>
          <td><%= link_to 'Destroy', employee, class: 'btn btn-default', method: :delete, data: {confirm: 'Are you sure?'} %></td>
        </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Employee', new_employee_path, class: 'btn btn-info'%>
</div>