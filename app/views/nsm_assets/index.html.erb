<h3>Nsm Assets</h3>

<div class="container-fluid">
  <table class="table table-striped table-hover table-condensed table-bordered">
  <thead>
    <tr>
      <th>Nsm asset</th>
      <th>Code</th>
      <th>Invoice Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nsm_assets.each do |nsm_asset| %>
      <tr onclick="window.location.href = 'nsm_assets/<%= nsm_asset.id %>'">
        <td><%= nsm_asset.nsm_asset_type.name %></td>
        <td><%= nsm_asset.code %></td>
        <td><%= nsm_asset.invoice_number %></td>
        <td><%= link_to 'Edit', edit_nsm_asset_path(nsm_asset), class: 'btn btn-default' %></td>
        <td><%= link_to 'Remove', nsm_asset, class: 'btn btn-default', method: :delete, data: { confirm: 'Are you sure?'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'New Nsm Asset', new_nsm_asset_path, class: 'btn btn-info' %>
</div>