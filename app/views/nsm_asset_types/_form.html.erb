<%= form_for(nsm_asset_type, :html => {:class => 'form-horizontal'}) do |f| %>
    <% if nsm_asset_type.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(nsm_asset_type.errors.count, "error") %> prohibited this nsm_asset_type from being
            saved:</h2>

          <ul>
            <% nsm_asset_type.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="container">
      <div class="form-group">
        <%= f.label :name, class: 'control-label col-sm-2' %>
        <div class="col-sm-10">
          <%= f.text_field :name, class: 'form-control', placeholder: 'Enter asset name' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :description, class: 'control-label col-sm-2' %>
        <div class="col-sm-10">
          <%= f.text_area :description, class: 'form-control', placeholder: 'Enter description' %>
        </div>
      </div>

      <div class="actions">
        <div class="col-sm-offset-2 col-sm-4">
          <%= f.submit class: 'btn btn-info' %>
          <%= link_to 'Back', nsm_asset_types_path, class: 'btn btn-info' %>
        </div>
      </div>
    </div>
<% end %>
