<p id="notice"><%= notice %></p>

<h3>Departments</h3>


<div class="container-fluid">
  <table class="table table-striped table-hover table-condensed table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr onclick="window.location.href = 'departments/<%= department.id %>'">
        <td><%= department.name %></td>
        <td><%= department.description %></td>
        <td><%= link_to 'Edit', edit_department_path(department), class: 'btn btn-default'  %></td>
        <td><%= link_to 'Remove', department, class: 'btn btn-default', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Department', new_department_path, class: 'btn btn-info' %>
</div>