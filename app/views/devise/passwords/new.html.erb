<h3>Forgot your password?</h3>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post}, :html => {:class => 'form-horizontal'}) do |f| %>
    <%= devise_error_messages! %>

    <div class="actions">
      <div class="container">
        <div class="form-group">
          <%= f.label :email, class: 'control-label col-sm-2' %>
          <div class="col-sm-10">
            <%= f.email_field :email, class: 'form-control', placeholder: 'Enter email id', autofocus: true %>
          </div>
        </div>

        <div class="actions">
          <div class="col-sm-offset-1 col-sm-4">
            <%= f.submit "Send reset password instructions", class: 'btn btn-info' %>
          </div>
        </div>
      </div>

<% end %>
</div>
<%= render "devise/shared/links" %>
