<h3>Resend unlock instructions</h3>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, :class => 'form-horizontal'  }) do |f| %>
  <%= devise_error_messages! %>

    <div class="container-fluid">

      <div class="form-group">
        <%= f.label :email, class: 'control-label col-sm-2' %>
        <div class="col-sm-10">
          <%= f.email_field :email, class: 'form-control', placeholder: 'Enter Email here', autofocus: true %>
        </div>
      </div>

      <div class="actions">
        <div class="col-sm-offset-2 col-sm-4">
          <%= f.submit "Resend unlock instructions", class: 'btn btn-info' %>
        </div>
      </div>
    </div>
<% end %>

<%= render "devise/shared/links" %>
