<h3>Log in</h3>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'form-horizontal'}) do |f| %>
    <div class="container-fluid">

      <div class="form-group">
        <%= f.label :email, class: 'control-label col-sm-2' %>
        <div class="col-sm-10">
          <%= f.email_field :email, class: 'form-control', placeholder: 'Enter Email here', autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, class: 'control-label col-sm-2' %>
        <div class="col-sm-10">
          <%= f.password_field :password, class: 'form-control', placeholder: 'Enter password here', autocomplete: "off" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? -%>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-2">
          <%= f.check_box :remember_me, class: 'control-label col-sm-2' %>
          <%= f.label :remember_me%>
        </div>
      </div>
      <% end -%>

      <div class="actions">
        <div class="col-sm-offset-2 col-sm-4">
          <%= f.submit 'Log in', class: 'btn btn-info' %>
        </div>
      </div>

<% end %>
</div>

<%= render "devise/shared/links" %>
