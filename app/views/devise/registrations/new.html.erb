<h3>Sign up</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'form-horizontal'}) do |f| %>
  <%= devise_error_messages! %>

    <div class="container-fluid">

      <div class="form-group">
        <%= f.label :email, class: 'control-label col-sm-2' %>
        <div class="col-sm-10">
          <%= f.email_field :email, class: 'form-control', placeholder: 'Enter Email here', autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, class: 'control-label col-sm-2' %>
        <div class="col-sm-10">
          <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: 'off', class: 'form-control', placeholder: 'Enter password here' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: 'control-label col-sm-2' %>
        <div class="col-sm-10">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Confirm password here'%>
        </div>
      </div>

      <div class="actions">
        <div class="col-sm-offset-2 col-sm-4">
          <%= f.submit "Sign up", class: 'btn btn-info' %>
        </div>
      </div>
    </div>
<% end %>
